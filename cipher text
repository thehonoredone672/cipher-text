def encrypt(shift):
    encypted_text = ''
    plain_text=input("Enter plain text:")
    l=[]
    list=[]
    for char in plain_text:
        list.append(ord(char))
    for num in list:
        l.append(num+shift)
    for num in l:
        encypted_text+=chr(num)
    print("Encrypted text:")
    print('\t',encypted_text)
    # re_choice()


def decrypt(shift):
    decypted_text = ''
    encrypted_text = input("Enter Encrypted text:")
    l = []
    list = []
    for char in encrypted_text:
        list.append(ord(char))
    for num in list:
        l.append(num - shift)
    for num in l:
        decypted_text += chr(num)
    print("decrypted text:")
    print('\t',decypted_text)
    # re_choice()

def re_choice():
    r_choice=input('Do you want to continue? (y/n):')
    if r_choice=='y' or r_choice=='Y':
        choice()


def choice():
    print("Do you want to \n1.ercrypt or \n2.decrypt?")
    choice = input("Enter your choice (e/d):")
    match choice:
        case "e"|"E":
            try:
                key = int(input("enter the key value:"))
                encrypt(key)
            except ValueError:
                print("Error...Enter the key value of number type")
        case "d"|"D":
            try:
                key = int(input("enter the key value:"))
                decrypt(key)
            except ValueError:
                print("Error...Enter the key value of number type")
        case _:
            print("invalid choice....")
    re_choice()

choice()




